<resources>

    <!-- DEFAULT theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/white</item>

        <!-- Main Study button and all inner study topic buttons -->
        <item name="StudyButton">@color/darkBlue</item>
        <item name="StudyButtonText">@color/red</item>

        <!-- Main Revision Button -->
        <item name="RevisionButton">@color/blue</item>
        <item name="RevisionButtonText">@color/darkBlue</item>

        <!-- All inner Revision topic buttons -->
        <item name="RevisionButtonIn">@color/darkBlue</item>
        <item name="RevisionButtonTextIn">@color/lightBlue</item>

        <!-- Main Test Button -->
        <item name="TestButton">@color/lightBlue</item>
        <item name="TestButtonText">@color/darkBlue</item>

        <!-- All the other secondary buttons -->
        <item name="OtherButtons">@color/gray</item>
        <item name="OtherButtonsText">@color/darkBlue</item>
    </style>

    <!-- NEW theme. -->
    <style name="NewTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent1</item>
        <item name="backgroundColor">@color/white</item>

        <!-- Put the new Color Combo here -->

        <!-- Main Study button and all inner study topic buttons -->
        <item name="StudyButton">@color/beige</item>
        <item name="StudyButtonText">@color/black</item>

        <!-- Main Revision Button -->
        <item name="RevisionButton">@color/beige</item>
        <item name="RevisionButtonText">@color/black</item>

        <!-- All inner Revision topic buttons -->
        <item name="RevisionButtonIn">@color/beige</item>
        <item name="RevisionButtonTextIn">@color/black</item>

        <!-- Main Test Button -->
        <item name="TestButton">@color/beige</item>
        <item name="TestButtonText">@color/black</item>

        <!-- All the other secondary buttons -->
        <item name="OtherButtons">@color/beige</item>
        <item name="OtherButtonsText">@color/black</item>
    </style>

</resources>
