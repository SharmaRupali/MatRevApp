<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <TextView
        android:text="Nauka - Spis Treści"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textAlignment="center"
        tools:textColor="@color/darkBlue"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/darkBlue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <Button
                android:id="@+id/button16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="?attr/StudyButton"
                android:onClick="onTopic1ButtonClick"
                android:text="Dozór Techniczny"
                android:textColor="?attr/StudyButtonText" />

            <Button
                android:id="@+id/button17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?attr/StudyButton"
                android:onClick="onTopic2ButtonClick"
                android:text="Obowiązki"
                android:textColor="?attr/StudyButtonText" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?attr/StudyButton"
                android:onClick="onTopic3ButtonClick"
                android:text="Rodzaje Urządzeń"
                android:textColor="?attr/StudyButtonText" />

            <Button
                android:id="@+id/button15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?attr/StudyButton"
                android:onClick="onTopic4ButtonClick"
                android:text="Najważniejsze Parametry + Budowa"
                android:textColor="?attr/StudyButtonText" />

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?attr/StudyButton"
                android:onClick="onTopic5ButtonClick"
                android:text="Obsługa"
                android:textColor="?attr/StudyButtonText" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?attr/StudyButton"
                android:onClick="onTopic6ButtonClick"
                android:text="Zagrożenia"
                android:textColor="?attr/StudyButtonText" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?attr/StudyButton"
                android:onClick="onTopic7ButtonClick"
                android:text="Zabezpieczenia Podestu"
                android:textColor="?attr/StudyButtonText" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>