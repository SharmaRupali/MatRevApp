<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="?attr/backgroundColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/q1"
                android:textColor="@color/darkBlue"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:onClick="radio_clicked"
                    android:text="@string/q1a1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/radioButton"
                    android:layout_alignRight="@+id/radioButton"
                    android:layout_alignTop="@+id/radioButton"
                    app:srcCompat="@android:drawable/ic_delete" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/radioButton"
                    android:layout_alignEnd="@+id/radioButton"
                    android:layout_alignRight="@+id/radioButton"
                    app:srcCompat="@drawable/tick_clip_art_9457" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/radioButton"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:onClick="radio_clicked"
                    android:text="@string/q1a2" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/radioButton2"
                    android:layout_alignRight="@+id/radioButton2"
                    android:layout_alignTop="@+id/radioButton2"
                    app:srcCompat="@android:drawable/ic_delete" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/radioButton2"
                    android:layout_alignEnd="@+id/radioButton2"
                    android:layout_alignRight="@+id/radioButton2"
                    app:srcCompat="@drawable/tick_clip_art_9457" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/radioButton2"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:onClick="radio_clicked"
                    android:text="@string/q1a3" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView11"
                    android:layout_alignEnd="@+id/radioButton2"
                    android:layout_alignRight="@+id/radioButton2"
                    app:srcCompat="@drawable/tick_clip_art_9457" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/radioButton4"
                    android:layout_alignRight="@+id/radioButton4"
                    android:layout_alignTop="@+id/radioButton4"
                    app:srcCompat="@android:drawable/ic_delete" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/radioButton3"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:onClick="radio_clicked"
                    android:text="@string/q1a4" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/radioButton3"
                    android:layout_alignEnd="@+id/radioButton3"
                    android:layout_alignRight="@+id/radioButton3"
                    app:srcCompat="@drawable/tick_clip_art_9457" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/radioButton3"
                    android:layout_alignRight="@+id/radioButton3"
                    android:layout_alignTop="@+id/radioButton3"
                    app:srcCompat="@android:drawable/ic_delete" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/radioButton4"
                    android:layout_alignStart="@+id/radioButton4"
                    android:layout_below="@+id/radioButton4"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:onClick="goToNextQuestion"
                    android:text="@string/nextQuestion" />

                <Button
                    android:id="@+id/button21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/button4"
                    android:layout_alignStart="@+id/button4"
                    android:layout_below="@+id/button4"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:onClick="popupConfirmation"
                    android:text="PorzuÄ‡ Test" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>